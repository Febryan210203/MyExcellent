<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:padding="17dp"
            android:background="@drawable/rounded_badge2"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:contentDescription="Kembali"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/txtSmartTutor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="halaman Pembayaran"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvNamaMapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Nama Mapel: Matematika"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvTotalBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Total: Rp 150.000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvVaLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Nomor Virtual Account:"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvVirtualAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8808123456789012"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSalinVA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salin"
                android:backgroundTint="@color/dark_blue"
                android:textColor="@color/white"/>

        </LinearLayout>

        <!-- Tambahan QR Code -->
        <TextView
            android:id="@+id/tvScanBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atau scan QR Code untuk membayar"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imgQrCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/scan"
            android:contentDescription="QR Code" />

        <Button
            android:id="@+id/btnCekStatusPembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar sekarang"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/dark_blue"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
