<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue">

    <!-- Icon Back -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Back"
        app:srcCompat="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arc_3" />
    <ImageView
        android:id="@+id/imgGuru"
        android:layout_width="1200dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/guru1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Profile Guru"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_blue"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtNamaGuru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Guru"
                        android:drawablePadding="8dp"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:drawableStart="@drawable/guru"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/txtBiodataGuru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biodata"
                        android:textSize="19sp"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_biodata"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/txtPendidikan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendidikan Terakhir"
                        android:drawablePadding="8dp"
                        android:textSize="19sp"
                        android:drawableStart="@drawable/ic_schol"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/txtNonip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nip"
                        android:drawablePadding="8dp"
                        android:textSize="19sp"
                        android:drawableStart="@drawable/ic_credit_card"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/txtNohp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No HP"
                        android:drawablePadding="8dp"
                        android:textSize="19sp"
                        android:drawableStart="@drawable/phone"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/txtAlamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textSize="19sp"
                        android:drawableStart="@drawable/location"
                        android:textColor="@color/black"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/txtMapel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mata Pelajaran"
                        android:textSize="19sp"
                        android:drawableStart="@drawable/ic_book"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Tombol Booking -->
            <Button
                android:id="@+id/btnBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Sekarang"
                android:padding="12dp"
                android:textSize="16sp"
                android:backgroundTint="@color/dark_blue"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

