<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHelp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="17dp"
            android:background="@drawable/rounded_badge2"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:layout_marginBottom="20dp"
                android:contentDescription="Kembali"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/txtSmartTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pusat bantuan ?"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/edtSearchFaq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cari pertanyaan umum..."
                android:padding="10dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:inputType="text"
                android:textColor="@android:color/black" />
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFaq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />
        <Button
            android:id="@+id/btnContactAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi Admin Via WhatsApp"
            android:layout_marginTop="15dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>
