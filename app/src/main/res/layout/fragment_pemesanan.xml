<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="17dp"
            android:background="@drawable/rounded_badge2"
            android:layout_marginBottom="8dp">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:contentDescription="Kembali"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/txtSmartTutor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="halaman pemesanan"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <!-- Spinner Mapel -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Mapel:"
            android:textColor="@color/black"
            android:layout_marginTop="20dp" />

        <!-- Spinner Jenjang -->
        <Spinner
            android:id="@+id/spinnerMapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:popupTheme="@style/SpinnerCustom"
            android:layout_centerInParent="true"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Jenjang:"
            android:textColor="@color/black"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinnerJenjang"
            android:layout_width="match_parent"
            android:backgroundTint="@color/black"
            android:popupTheme="@style/SpinnerCustom"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <!-- Spinner Guru -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Guru:"
            android:textColor="@color/black"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinnerGuru"
            android:layout_width="match_parent"
            android:backgroundTint="@color/black"
            android:popupTheme="@style/SpinnerCustom"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <!-- Spinner Jadwal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Jadwal:"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/spinnerJadwal"
            android:layout_width="match_parent"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:popupTheme="@style/SpinnerPopupTheme"/>

        <!-- Dropdown Tipe Bimbel yang Memuat Nama Layanan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tipe Bimbel"
            android:textColor="@color/black"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinnerNamaLayanan"
            android:layout_width="match_parent"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:popupTheme="@style/SpinnerPopupTheme"/>

        <!-- Pilih Tanggal Booking -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal pemesanan"
            android:textColor="@color/black"
            android:layout_marginTop="0dp" />
        <EditText
            android:id="@+id/edtTanggalBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="21-mei-2025"
            android:focusable="false"
            android:textColor="@color/black"
            android:inputType="none"
            android:drawableEnd="@drawable/baseline_date_range_24" />

        <!-- Tombol Booking -->
        <Button
            android:id="@+id/btnBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan Sekarang"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>